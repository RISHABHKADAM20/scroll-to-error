{
  "compilerOptions": {
    "target": "ES2019",           // JS version
    "module": "CommonJS",         // npm-friendly module
    "declaration": true,          // generate index.d.ts
    "outDir": "dist",             // compiled files go here
    "strict": true,               // strict type checking
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],        // include all files inside src
  "exclude": ["node_modules", "dist"]
}
